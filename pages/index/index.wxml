<!--pages/index/index.wxml-->
<view class="waterfall-container">
  <!-- 左侧列 -->
  <view class="column">
    <view 
      wx:for="{{leftColumnData}}" 
      wx:key="index" 
      class="waterfall-item"
      style="font-family: {{item.fontFamily}}, sans-serif;"
    >
      <view class="text-preview">{{item.text}}</view>
      <view class="font-name">{{item.fontName}}</view>
    </view>
  </view>
  <!-- 右侧列 -->
  <view class="column">
    <view 
      wx:for="{{rightColumnData}}" 
      wx:key="index" 
      class="waterfall-item"
      style="font-family: {{item.fontFamily}}, sans-serif;"
    >
      <view class="text-preview">{{item.text}}</view>
      <view class="font-name">{{item.fontName}}</view>
    </view>
  </view>
</view>
