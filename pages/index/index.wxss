/* pages/index/index.wxss */
page {
  background-color: #f5f5f5;
}

.waterfall-container {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

.column {
  width: 48%;
  display: flex;
  flex-direction: column;
}

.waterfall-item {
  height: 300rpx; /* 设置统一的卡片高度 */
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #333;
  transition: font-family 0.3s;
}

/* 只有当.font-loaded类存在时，才应用自定义字体 */
.font-loaded .waterfall-item {
  font-family: 'PFYTT', sans-serif;
}
