/* components/control-panel/control-panel.wxss */
.control-panel-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.tabs-container {
  display: flex;
  width: 100%;
  white-space: nowrap; /* 让标签横向排列不换行 */
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  display: inline-block; /* 使其能在scroll-view中横向排列 */
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: color 0.3s;
}

.tab-item.active {
  color: #07C160; /* 品牌色 */
  border-bottom: 4rpx solid #07C160;
}

.tab-content {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
}
